{
  "name": "relay-workspace",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm:dev:*\" --names \"worker,react\" --prefix-colors \"blue,magenta\"",
    "dev:worker": "pnpm --filter relay-examples dev",
    "dev:react": "pnpm --filter relay-web dev",
    "build": "pnpm --filter relay-web build && pnpm --filter relay-web deploy && pnpm --filter relay-examples deploy",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm --filter relay-sdk test",
    "test:e2e": "playwright test tests/*.e2e.spec.ts",
    "test:e2e:ui": "playwright test tests/*.e2e.spec.ts --ui",
    "test:e2e:install": "playwright install chromium",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "relay-sdk": "workspace:*",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "concurrently": "^9.2.1",
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0"
  }
}
