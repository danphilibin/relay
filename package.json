{
  "name": "relay-workspace",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm:dev:*\" --names \"worker,react\" --prefix-colors \"blue,magenta\"",
    "dev:worker": "pnpm --filter relay-examples dev",
    "dev:react": "pnpm --filter relay-web dev",
    "build": "pnpm -r build",
    "deploy": "pnpm --filter relay-web run deploy && pnpm --filter relay-examples run deploy",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm --filter relay-sdk test",
    "test:e2e": "playwright test tests/*.e2e.spec.ts",
    "test:e2e:ui": "playwright test tests/*.e2e.spec.ts --ui",
    "test:e2e:install": "playwright install chromium",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "prepare": "lefthook install"
  },
  "dependencies": {
    "relay-sdk": "workspace:*"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "concurrently": "^9.2.1",
    "lefthook": "^2.1.1",
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "lefthook"
    ]
  }
}
