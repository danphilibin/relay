{
  "overrides": [
    {
      "files": ["app/**/*.ts", "app/**/*.tsx"],
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "patterns": [
              {
                "group": ["@/isomorphic", "@/isomorphic/*"],
                "message": "Do not import isomorphic internals in app/. Use @relayjs instead."
              },
              {
                "group": ["@/*"],
                "message": "Imports from src/ must go through @relayjs in app/."
              }
            ]
          }
        ]
      }
    }
  ]
}
